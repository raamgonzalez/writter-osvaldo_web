
---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro'
import ButtonTop from '../components/ui/ButtonTop.astro'
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="stylesheet" href="../styles.css" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header id="top"/>
		<slot />
		<ButtonTop/>
		<Footer />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Belleza&family=Oswald:wght@200;300;400&display=swap');
:root {
	--accent: 124, 58, 237;
	--accent-gradient: linear-gradient(5deg, rgb(var(--accent)), #da62c4 30%, white 60%);

	--color-primary: #FFEAD5;
	--color-secondary: #E3E3E3;
	--color-icons: #1E1E1E;
	--color-background: #2D272D;
	/*Opacity 20% */
	--color-slider: #559E97;


	--margin-xlarge: 80px;
	--margin-large: 40px;
	--margin-small: 20px;

	--padding-horizontal: 20px;

	--font-base: 'Oswald', sans-serif;
	--font-text: 'Belleza', sans-serif; 

	--font-size-large: 31px;
	--font-size-medium: 20px;
	--font-size-small: 16px;
}

	html {
		scroll-behavior: smooth;
		font-weight: normal;
		background-color: var(--color-background);
		color: var(--color-primary);
	}

	body{
		font-family: var(--font-base);
		width: 100%;
		height: 100vh;
		padding: var(--margin-small) var(--margin-small);
	}
</style>
