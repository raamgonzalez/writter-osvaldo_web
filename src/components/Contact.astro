---
import ButtonArrow from './ui/ButtonArrow.astro'
import { data } from '../data/data';

const socials = data.contact;

type Social = {
	id: number;
	title: string;
	href: string;
	state: boolean;
}

---

<section class="contact">
	{
		socials.map((social:Social)=>(
			social.state &&
			<section class="contact__container">
				<a class="contact__a" href={social.href} target="_blank">
					{social.title.toUpperCase()}
				</a>
				<ButtonArrow classSvg={'button__svg button__svg--nobackground'}  classPath={'button__path--nobackground'}/>
			</section>
		))
	}
</section>


<style>
	.contact{
		margin: var(--margin-large) 0 var(--margin-large) 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.contact__container{
		display: flex;
		padding: 0 0 0 11px;
		justify-content: space-between;
		align-items: center;

		width: 100%;
		height: 35px;
		border-radius: 5px;
		border: 1px solid var(--color-primary);
		box-shadow: 0 3px 1px 1px var(--color-icons);
	}
	.contact__container:hover{
		background-color: var(--color-primary);
	}

	.contact__container:hover .contact__a{
		color: var(--color-icons);
	}
	.contact__a{
		width: 100%;
		height: fit-content;
		font-size: var(--font-size-small);
		font-family: var(--font-text);
	}

	@media (min-width: 768px) {

		.contact__container{
			padding: 1.5rem 0.5rem;
		}

	}
</style>