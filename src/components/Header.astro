---
import NavBar from './NavBar'
import Logo from './Logo.astro';
---

<header class="header">
	<Logo/>
	<NavBar client:load/>
</header>


<style>
	.header{
		display: flex;
		margin: 0 0 0 0;
		justify-content: space-between;
	}
	.header__title{
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.header__title h1{
		font-size: var(--font-size-large);
		font-family: var(--font-base);
		max-width: 128px;
		padding: 0;
		margin: 0;
		line-height: 1.2em;
	}
</style>
