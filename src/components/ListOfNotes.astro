---
import ButtonNotes from './ui/ButtonNotes.astro'

import { data } from '../data/data';
const { notes } = data;

type Note = {
	id: number,
	title: string,
	content: string,
	href: string,
}
---


<section class="note">
	{notes.map((note:Note) => (
		<section class="note__section">
			<section class="note__singular">
				<h3>{note.title}</h3>
				<p>{note.content}</p>
			</section>
			<ButtonNotes />
		</section>
	))}
</section>


<style>
	.note{
		margin: var(--margin-small) 0 0 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.note h3{
		font-size: var(--font-size-medium);
	}
	.note p{
		font-size: var(--font-size-small);
		font-family: var(--font-text);
	}

	.note__section{
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
	}

</style>

