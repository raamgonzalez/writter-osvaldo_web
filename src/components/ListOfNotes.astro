---
import ButtonArrow from './ui/ButtonArrow.astro'

import { data } from '../data/data';
const { notes } = data;

type Note = {
	id: number,
	title: string,
	content: string,
	href: string,
	important: boolean
}
---


<section class="note">
	{notes.map((note:Note) => (
		note.important &&
		<section class="note__section">
			<section class="note__singular">
				<a href={note.href}>{note.title}</a>
				<p>{note.content}</p>
			</section>
			<ButtonArrow href={note.href} classSvg={'button__svg button__svg--background'}  classPath={'button__path--background'} redirect={false}/>
		</section>
	))}
</section>


	

<style>
	.note{
		margin: var(--margin-small) 0 0 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.note h3{
		font-size: var(--font-size-medium);
	}
	.note p{
		font-size: var(--font-size-small);
		font-family: var(--font-text);
	}

	.note a{
		font-size: var(--font-size-medium);
		font-family: var(--font-base);
	}

	.note__section{
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
	}

	.note__section--noshow{
		display: none;
		
	}

	.note__button{
		display: flex;
		padding: 0 0 0 11px;
		justify-content: space-between;
		align-items: center;

		width: 100%;
		height: 35px;
		border-radius: 5px;
		border: 1px solid var(--color-primary);
	}

	.note__button p{
		font-size: var(--font-size-medium);
		letter-spacing: 0px;
	}

	@media (min-width: 768px) {

	.note{
		margin: var(--margin-small) 0 0 0;
		display: grid;
		grid-template-columns: repeat(2, 1fr);

	}
	.note__section{
		display: flex;
		flex-direction: column;
		place-items: flex-start;
	}

	.note a:hover{
		text-decoration: underline;	
	}

}

</style>

