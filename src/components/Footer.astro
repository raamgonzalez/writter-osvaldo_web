---
import LineH from './ui/LineH';
import Contact from './Contact.astro'
import { data } from '../data/data';
import Logo from './Logo.astro';

const { films } = data;
---


<footer class="contact">
	<h2>CONTACTO</h2>
	<LineH/>
	<Contact/>
	<section class="contact__policy">
		<p>Todos los derechos reservados</p>
		<Logo size={'small'}/>
	</section>
</footer>



<style>
	.contact{
		margin: var(--margin-sections) 0 var(--margin-small) 0;
	}
	.contact h2{
		font-size: var(--font-size-large);
		margin: var(--margin-small) 0 0 0;
	}

	.contact__policy{
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		place-items: center;
		padding: 0 0 var(--margin-small) 0;
	}

	@media (1280px <= width <= 2000px) {

		.contact__policy{
		padding: 0 0 40px 0;
		font-size: var(--font-size-small);
}

}

</style>