---
import { data } from '../data/data';

const { books } = data;

type Book = {
		id: number;
		title: string;
		href: string;
		img: string;
		issue: string;
		description: string;
};
---

<section class="h-fit">
	<h3 class="text-4xl text-center mb-10 font-bold">Libros p√∫blicados</h3>
	<swiper-container class="mySwiper" pagination="true" pagination-dynamic-bullets="true">
		{books.map((book: Book) => (
				<swiper-slide class="flex flex-col">
					<h4 class="text-3xl">{book.title}</h4>
					<p class="text-2xl my-3">{book.issue}</p>
					<img class="rounded-xl max-w-[20em] h-[30em] object-cover overflow-hidden mb-10" src={book.img} alt={`Imagen de portada de libro ${book.title}`}/>
				</swiper-slide>
		))}
	</swiper-container>
	<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-element-bundle.min.js"></script>
</section>

<style>

	swiper-container {
		width: 100%;
		height: 100%;
	}

	swiper-slide {
		text-align: center;
		font-size: 18px;
		background: transparent;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	swiper-slide img {
		display: block;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
</style>






