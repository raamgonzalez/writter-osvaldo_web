---
import { data } from '../data/data';
import BackQuotes from './ui/BackQuotes';

const { phrases } = data;

type Phrase = {
		id: number;
		phrase: string;
		author: string;
};

const randomPhrase:Phrase = phrases[Math.floor(Math.random() * phrases.length)];
---

<section class="phrase">
	{
		<section class="phrase__quote">
			<BackQuotes/>
				<p class="text-large">{randomPhrase.phrase}</p>
				<span class="text-medium">{randomPhrase.author}</span>
		</section>
	}
</section>

<style>
	.phrase{
		margin: var(--margin-xlarge) 0 var(--margin-xlarge) 0;
		width: 100%;
	}

	.phrase__quote{
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.phrase__quote p{
		font-weight: 300;
		line-height: 2.5rem;
	}
	.phrase__quote span{
		font-size: large;
	}


	@media (min-width: 768px) {
  
	.phrase__quote p{
		line-height: 4rem;
	}

	}
</style>
