---
import { data } from '@/data/data';
import CardSpotlight from "@/ui/CardSpotLight"
import ContactList from "@/components/ContactList.astro"
---


<section class="flex flex-col w-full h-full justify-center">
		<CardSpotlight noPadding client:load>
			<img class="self-end rounded-xl object-cover aspect-auto w-full max-h-[300px]" src="./profile/profile_02.jpeg"/>
		</CardSpotlight>
		<main class="mt-xs flex gap-2 justify-between w-full max-h-[200px]">						
			<section class="flex flex-wrap w-full gap-1 text-base-100 flex-1">
				<ContactList/>
			</section>
			<CardSpotlight border client:load background classStyle={'w-[13rem]'}>
				<p class="h-full grid items-center text-left text-xxl font-medium w-48 text-accent">
					OSVALDO GONZALEZ IGLESIAS
				</p>
			</CardSpotlight>
		</main>
</section>