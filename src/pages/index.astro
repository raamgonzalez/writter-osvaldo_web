---
import './styles.css'
import Articles from '../components/Articles.astro';
import ComingSoon from '../components/ComingSoon.astro';
import Notes from '../components/Notes.astro';
import ListOfBooks from '../components/ListOfBooks.astro';
import Phrases from '../components/Phrases.astro';
import Layout from '../layouts/Layout.astro';
import BookNewPromotion from '../components/BookNewPromotion.astro';
import About from '../components/About.astro';
---

<Layout title="OGI - Escritor">
		<About/>
		<Phrases/>
		<ListOfBooks/>
		<section class="grid grid-cols-1">
			<Notes/>
			<ComingSoon>
		</section>
		<BookNewPromotion/>
		<Articles/>
		<Phrases/>
</Layout>

<style>
	main {
		margin: auto;
		max-width: 100%;
		height: 100vh;
	}
</style>
